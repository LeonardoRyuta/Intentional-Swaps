[
    {
        "match": "**/*",

        // Custom CSP to allow CoinGecko API and ICP services
        "headers": {
            "Content-Security-Policy": "default-src 'self'; connect-src 'self' https://api.coingecko.com https://identity.ic0.app https://icp-api.io http://127.0.0.1:4943 http://localhost:4943 http://*.localhost:4943 https://*.ic0.app https://api.devnet.solana.com wss://api.devnet.solana.com/; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;"
        },

        // Disable the warning since we've customized the policy
        "disable_security_policy_warning": true,

        // Uncomment to redirect all requests from .raw.icp0.io to .icp0.io
        // "allow_raw_access": false
    },
]
